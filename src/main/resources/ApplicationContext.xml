<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="hikariConfig" class="com.zaxxer.hikari.HikariConfig"
        p:driverClassName="com.mysql.jdbc.Driver"
        p:jdbcUrl="jdbc:mysql://localhost:3306/eshopdb"
        p:username="julia"
        p:password="julia"
        p:minimumIdle="20"
        p:maximumPoolSize="30"
        p:poolName="springHikariCP"
    />

    <bean name="dataSource" class="com.zaxxer.hikari.HikariDataSource">
        <constructor-arg name="configuration" ref="hikariConfig" />
    </bean>

    <bean name="mySqlHikariDataSourceFactory" class="com.gmail.kramarenko104.factoryDao.MySqlHikariDataSourceFactory" destroy-method="closeConnection" >
    </bean>

    <bean name="daoFactory" class="com.gmail.kramarenko104.factoryDao.DaoFactory" abstract="true" factory-method="getSpecificDao" destroy-method="closeConnection"
        p:connection-ref="#{dataSource.getConnection()}"
        p:userDaoMySqlImpl-ref="userDao"
        p:productDaoMySqlImpl-ref="productDao"
        p:cartDaoMySqlImpl-ref="cartDao"
        p:orderDaoMySqlImpl-ref="orderDao"
    />

    <bean name="userDao" class="com.gmail.kramarenko104.dao.UserDaoMySqlImpl" lazy-init="true">
        <constructor-arg name="conn" ref="#{dataSource.getConnection()}"></constructor-arg>
    </bean>

    <bean name="productDao" class="com.gmail.kramarenko104.dao.ProductDaoMySqlImpl" lazy-init="true">
        <constructor-arg name="conn" ref="#{dataSource.getConnection()}"></constructor-arg>
    </bean>

    <bean name="cartDao" class="com.gmail.kramarenko104.dao.CartDaoMySqlImpl" lazy-init="true">
        <constructor-arg name="conn" ref="#{dataSource.getConnection()}"></constructor-arg>
    </bean>

    <bean name="orderDao" class="com.gmail.kramarenko104.dao.OrderDaoMySqlImpl" lazy-init="true">
        <constructor-arg name="conn" ref="#{dataSource.getConnection()}"></constructor-arg>
    </bean>



</beans>